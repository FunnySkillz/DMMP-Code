<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DMMP_Frontend.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DMMP_Frontend.View"
    Shell.FlyoutBehavior="Disabled">


    <TabBar x:Name="MyTabBar">
        <Tab Title="Home" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage"></ShellContent>
        </Tab>

        <Tab Title="List" Icon="list.png">
            <ShellContent ContentTemplate="{DataTemplate local:PropertyListView}" Route="ListPage"></ShellContent>
        </Tab>

        <Tab Title="Add" Icon="add.png">
            <ShellContent ContentTemplate="{DataTemplate local:AddPropertyPage}" Route="AddPage"></ShellContent>
        </Tab>
        
        <Tab Title="NFC" Icon="nfc.jpg">
            <ShellContent ContentTemplate="{DataTemplate local:NFCPage}" Route="NFCPage"></ShellContent>
        </Tab>

        <Tab Title="User" Icon="account.png">
            <ShellContent ContentTemplate="{DataTemplate local:UserDetailPage}" Route="UserPage"></ShellContent>
        </Tab>
    </TabBar>
    
    
    <!--<ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />-->

</Shell>
